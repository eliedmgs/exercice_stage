{% extends 'modeles/principaleModele.html.twig' %}
 
{% block contenu %}
    {% for message in app.flashes('erreur') %}
        <div class="flash-notice alert alert-danger">
            {{ message }}
        </div>
	{% endfor %}
     <h1 class="text-center mt-3">Modifier votre mot de passe</h1>

    <div class="container col-4 mt-3">

        {{ form_start(form) }}
  
            <div class="form-group">
                {{ form_label(form.oldPassword, 'Ancien mot de passe :') }}
                {% if form_errors(form.oldPassword) == null %}
                    {{ form_widget(form.oldPassword, {'attr': {'class': 'form-control'}}) }}
                {% else %}    
                    {{ form_widget(form.oldPassword, {'attr': {'class': 'form-control is-invalid'}}) }}
                    <div class="invalid-feedback">
                        {{ form_errors(form.oldPassword) }}
                    </div>
                {% endif %}
            </div>
            <div class="form-group">
                {{ form_label(form.newPassword.first, 'Nouveau mot de passe :') }}
                {% if form_errors(form.newPassword.first) == null %}
                    {{ form_widget(form.newPassword.first, {'attr': {'class': 'form-control'}}) }}
                {% else %}    
                    {{ form_widget(form.newPassword.first, {'attr': {'class': 'form-control is-invalid'}}) }}
                    <div class="invalid-feedback">
                        {{ form_errors(form.newPassword.first) }}
                    </div>
                {% endif %}
            </div>
            <div class="form-group">
                {{ form_label(form.newPassword.second, 'Confirmer le nouveau mot de passe :') }}
                {% if form_errors(form.newPassword.second) == null %}
                    {{ form_widget(form.newPassword.second, {'attr': {'class': 'form-control'}}) }}
                {% else %}    
                    {{ form_widget(form.newPassword.second, {'attr': {'class': 'form-control is-invalid'}}) }}
                    <div class="invalid-feedback">
                        {{ form_errors(form.newPassword.second) }}
                    </div>
                {% endif %}
            </div>
            
        {{form_end(form)}}
    </div>
{% endblock %}