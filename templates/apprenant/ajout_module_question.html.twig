{% extends 'modeles/principaleModele.html.twig' %}

{% block contenu %}

<br>
<h1 class="text-center">AJOUT D'UNE QUESTION D'UN MODULE</h1>

{{ form_start(form) }}

<div class="container">

	<div class="form-group">
		<div>
			{{ form_label(form.question, "Question:")}}
			{% if form_errors(form.question) == null %}
			{{ form_widget(form.question) }}
			{% else %}
			{{ form_widget(form.question, {'attr': {'class': 'form-control is-invalid'}}) }}
			<div class="invalid-feedback">{{form_errors(form.question)}}</div>
			{% endif %}
		</div>
	</div>
    
    <div class="form-group">
		<div>
			{{ form_widget(form.ajout,  {'label': 'Ajouter la question', 'attr': {'class': 'btn btn-outline-success', }}) }}
		</div>
	</div>

</div>
z
{{ form_end(form) }}



{% endblock %}