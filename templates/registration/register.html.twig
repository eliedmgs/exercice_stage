{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <h1>Register</h1>

    <div class="container mt-3">
        {{ form_start(registrationForm) }}
            <div class="form-group">
                {{ form_label(registrationForm.email, 'Email :') }}
                {% if form_errors(registrationForm.email) == null %}
                    {{ form_widget(registrationForm.email, {'attr': {'class': 'form-control'}}) }}
                {% else %}    
                    {{ form_widget(registrationForm.email, {'attr': {'class': 'form-control is-invalid'}}) }}
                    <div class="invalid-feedback">
                        {{ form_errors(registrationForm.email) }}
                    </div>
                {% endif %}
            </div>
            <div class="form-group">
                {{ form_label(registrationForm.nom, 'Nom :') }}
                {% if form_errors(registrationForm.nom) == null %}
                    {{ form_widget(registrationForm.nom, {'attr': {'class': 'form-control'}}) }}
                {% else %}    
                    {{ form_widget(registrationForm.nom, {'attr': {'class': 'form-control is-invalid'}}) }}
                    <div class="invalid-feedback">
                        {{ form_errors(registrationForm.nom) }}
                    </div>
                {% endif %}
            </div>
            <div class="form-group">
                {{ form_label(registrationForm.prenom, 'Pr√©nom :') }}
                {% if form_errors(registrationForm.prenom) == null %}
                    {{ form_widget(registrationForm.prenom, {'attr': {'class': 'form-control'}}) }}
                {% else %}    
                    {{ form_widget(registrationForm.prenom, {'attr': {'class': 'form-control is-invalid'}}) }}
                    <div class="invalid-feedback">
                        {{ form_errors(registrationForm.prenom) }}
                    </div>
                {% endif %}
            </div>
            <div class="form-group">
                {{ form_label(registrationForm.plainPassword, 'Mot de passe :') }}
                {% if form_errors(registrationForm.plainPassword) == null %}
                    {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'form-control'}}) }}
                {% else %}    
                    {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'form-control is-invalid'}}) }}
                    <div class="invalid-feedback">
                        {{ form_errors(registrationForm.plainPassword) }}
                    </div>
                {% endif %}
            </div>
            <div class="form-group">
                <div class="form-check form-check-inline">
                    {{ form_widget(registrationForm.agreeTerms, {'attr': {'class': 'form-check-input'}}) }}
                </div>
                {{ form_label(registrationForm.agreeTerms,'Accepter les termes') }}
                
                {{ form_errors(registrationForm.agreeTerms) }}
            </div>
        {{form_end(registrationForm)}}
    </div>

{% endblock %}
