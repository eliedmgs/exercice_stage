{% extends 'modeles/principaleModele.html.twig' %}

{% block contenu %}
<div class="text-center mt-3">
	<h1>AJOUT D'UNE QUESTION AU Q.C.M</h1>
	<h3> {{ qcm.nom }} </h3>
</div>

<div class="container col-4 mt-3">	
	{{ form_start(form) }}
		<div class="form-group" 
				{{ form_label(form.question, "Question:")}}
				{% if form_errors(form.question) == null %}
				{{ form_widget(form.question, {'attr': {'class': 'form-control'}}) }}
				{% else %}
				{{ form_widget(form.question, {'attr': {'class': 'form-control is-invalid'}}) }}
				<div class="invalid-feedback">{{form_errors(form.question)}}</div>
				{% endif %}
		</div>
	{{ form_end(form) }}
</div>






{% endblock %}
