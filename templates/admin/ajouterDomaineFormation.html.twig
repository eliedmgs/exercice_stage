{% extends 'modeles/principaleModele.html.twig' %}

{% block contenu %}

<br>
<h1 class="text-center">Ajouter un domaine de formation</h1>

<div class="container col-4"><hr>

	{{ form_start(form) }}

		<div class="form-group">
			{{ form_label(form.nom, 'Nom :') }}
			{% if form_errors(form.nom) == null %}
			{{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
			{% else %}
			{{ form_widget(form.nom, {'attr': {'class': 'form-control is-invalid'}}) }}
			<div class="invalid-feedback">
				{{ form_errors(form.nom) }}
			</div>
			{% endif %}
		</div>
		<div class="form-group">
			<div>
				{{ form_label(form.image)}}
				{% if form_errors(form.image) == null %}
				{{ form_widget(form.image) }}
				{% else %}
				{{ form_widget(form.image, {'attr': {'class': 'form-control is-invalid'}}) }}
				<div class="invalid-feedback">{{form_errors(form.image)}}</div>
				{% endif %}
			</div>
		</div>

	{{ form_end(form) }}
</div>



</div>

{% endblock %}