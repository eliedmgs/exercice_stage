{% extends 'modeles/principaleModele.html.twig' %}

{% block contenu %}

<br>
<h1 class="text-center">Modifier un module</h1>

<div class="container col-4"><hr>

	{{ form_start(form) }}

		<div class="form-group">
			{{ form_label(form.nom, 'Nom :') }}
			{% if form_errors(form.nom) == null %}
			{{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
			{% else %}
			{{ form_widget(form.nom, {'attr': {'class': 'form-control is-invalid'}}) }}
			<div class="invalid-feedback">
				{{ form_errors(form.nom) }}
			</div>
			{% endif %}
		</div>
			<div class="form-group">
			<div>
				{{ form_label(form.mini_description, "Mini description:")}}
				{% if form_errors(form.mini_description) == null %}
				{{ form_widget(form.mini_description, {'attr': {'class': 'form-control'}}) }}
				{% else %}
				{{ form_widget(form.mini_description, {'attr': {'class': 'form-control is-invalid'}}) }}
				<div class="invalid-feedback">{{form_errors(form.mini_description)}}</div>
				{% endif %}
			</div>
		</div>

		<div class="form-group">
			<div>
				{{ form_label(form.description, "Description:")}}
				{% if form_errors(form.description) == null %}
				{{ form_widget(form.description, {'attr': {'class': 'form-control', 'rows' : '3'}}) }}
				{% else %}
				{{ form_widget(form.description, {'attr': {'class': 'form-control is-invalid', 'rows' : '4'}}) }}
				<div class="invalid-feedback">{{form_errors(form.description)}}</div>
				{% endif %}
			</div>
		</div>

		<div class="form-group">
			<div>
				{{ form_label(form.image)}}
				{% if form_errors(form.image) == null %}
				{{ form_widget(form.image) }}
				{% else %}
				{{ form_widget(form.image, {'attr': {'class': 'form-control is-invalid'}}) }}
				<div class="invalid-feedback">{{form_errors(form.image)}}</div>
				{% endif %}
			</div>
		</div>

		<div class="form-group">

				{{ form_label(form.formations, 'Formations :') }}
			</br>
			{% for formation in form.formations %}
				<div class="form-check form-check-inline">
					{{ form_widget(formation, {'attr': {'class': 'form-check-input'}}) }}
					{{ form_label(formation) }}
				</div>
			{% endfor %}
		</div>

		


	{{ form_end(form) }}
</div>



</div>

{% endblock %}